md-card(ng-repeat='poll in polls')
  md-card-content
    md-toolbar(ng-click='reveal = !reveal')
      .md-toolbar-tools
        h2 {{ poll.name }}
          |  
          i.fa.fa-caret-down(ng-hide='reveal')
          i.fa.fa-caret-up(ng-show='reveal')
    md-content(ng-show='reveal')
      poll-question(ng-repeat='question in poll.questions')
