div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Login

    .col-sm-12
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          label(translate) User name
          input.form-control(type='text', name='username', ng-model='user.username' placeholder='{{ "Surname Name" | translate }}')
        .form-group
          label(translate) Password
          input.form-control(type='password', name='password', ng-model='user.password')

        .form-group.has-error
          p.help-block(ng-show='form.username.$error.required && form.password.$error.required && submitted')
            span(translate) Please enter your username and password.
          p.help-block {{ errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            span(translate) Login

div(ng-include='"components/footer/footer.html"')
